<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.heigvd.gen.activities.ContactEditActivity">

    <LinearLayout
        android:id="@+id/edit_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="clip_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/group_name"
            android:textSize="32dp"
            android:padding="10dp"
            android:clickable="false"
            android:nestedScrollingEnabled="false"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/remove_button"
            style="?android:textAppearanceMedium"
            android:textColor="@color/buttonRemoveTextColor"
            android:background="@color/buttonRemoveBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Remove"
            android:width="120dp"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="removeGroup" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_members" />

    </LinearLayout>

</RelativeLayout>
